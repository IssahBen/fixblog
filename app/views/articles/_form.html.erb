<div class="container">
    <div class="row justify-content-center">
            <div class="col-10"> 
                <%= render "shared/errors",object: @article %>
                <%= form_with model: @article,class: "shadow p-3 mb-5 bg-white rounded"  do |form| %>

                <div class= "form-group row">

                    <%= form.label :title,class: "col-2 col-form-label text-dark " %>
                    <div class= "col-10">
                        <%= form.text_field :title ,class: "form-control rounded",placeholder: "Title of Article" %>
                    </div>
                </div>
                    
                <div class="form-group row">
                    <%= form.label :description ,class: "col-2 col-form-label text-dark" %>

                    <div class= "col-10">


                        <%= form.text_area :description,rows: 10, class: "form-control  shadow rounded" ,placeholder:" Description of Article" %>

                    </div>
                </div>

                       
                <div class="form-group row">
                    <%= form.label :category ,class: "col-2 col-form-label text-dark" %>

                    <%= form.collection_select(:category_ids ,Category.all, :id, :name,{prompt: "Please Select (can be empty)"},{multiple: true ,class:"custom-select shadow rounded"}) %>


                   



                <div class= "form-group  text-center ">   
                    <%= form.submit class: "btn btn-outline-primary btn-lg" %>
                </div>

                <% end %>
            </div>

            <%= link_to ["Article listing page"],articles_path,class: "text-center " %>
    </div>

</div>