  <%= render 'shared/errors', object: @category %>
                
                <%= form_with model: @category, class:"shadow p-3 mb-5 bg-white rounded"  do |form| %>

                <div class= "form-group row">

                    <%=form.label :name,"Category name " ,class: "col-2 col-form-label text-dark " %>
                    <div class= "col-10">
                        <%= form.text_field :name,class: "form-control rounded",placeholder: "Enter a name" %>
                    </div>
                </div>
                    
               
                   
                <div class= "form-group  text-center ">   
                    <%= form.submit  class: "btn btn-outline-primary btn-lg" %>
                </div>
                <% end %>

              