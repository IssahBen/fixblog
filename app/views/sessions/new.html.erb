
  <h1 class= 'text-center mt-4'>Log in</h1>

<div class="container">
  
 

    <div class="row justify-content-center">
            <div class="col-10"> 
           
                  
                
                <%= form_with scope: :session,url:login_path,class:"shadow p-3 mb-5 bg-white rounded"  do |form| %>

                    
                <div class="form-group row">
                    <%= form.label :email ,class: "col-2 col-form-label text-dark" %>

                    <div class= "col-10">


                        <%= form.email_field :email , class: "form-control rounded" ,placeholder:"Enter email adress" %>

                    </div>
                </div>
                   <div class="form-group row">
                    <%= form.label :password,class: "col-2 col-form-label text-dark" %>

                    <div class= "col-10">


                        <%= form.password_field :password , class: "form-control rounded" ,placeholder:"Enter a password" %>

                    </div>
                </div>
                <div class= "form-group  text-center ">   
                    <%= form.submit "Log In", class: "btn btn-outline-primary btn-lg" %>
                </div>

                <% end %>
            </div>

            <%= link_to ["Article listing page"],articles_path,class: "text-center " %>
    </div>

</div>


 